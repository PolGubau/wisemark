{
  "name": "wisemark",
  "displayName": "wisemark",
  "description": "Intelligent commands scanner for you projects",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "wisemark",
          "title": "Wisemark",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "wisemark": [
        {
          "id": "commentExplorer",
          "icon": "media/comment.svg",
          "name": "Comments"
        }
      ]
    },
    "keybindings": [
      {
        "command": "wisemark.insertNoteComment",
        "key": "ctrl+alt+n",
        "when": "editorTextFocus"
      },
      {
        "command": "wisemark.insertTodoComment",
        "key": "ctrl+alt+t",
        "when": "editorTextFocus"
      },
      {
        "command": "wisemark.insertFixmeComment",
        "key": "ctrl+alt+f",
        "when": "editorTextFocus"
      },
      {
        "command": "wisemark.insertQuestionComment",
        "key": "ctrl+alt+q",
        "when": "editorTextFocus"
      },
      {
        "command": "wisemark.insertRefactorComment",
        "key": "ctrl+alt+r",
        "when": "editorTextFocus"
      }
    ],
    "commands": [
      {
        "command": "wisemark.scan",
        "title": "Scan Wisemark commands üîç"
      },
      {
        "command": "wisemark.refresh",
        "title": "Refresh Wisemark commands üîÑ"
      },
      {
        "command": "wisemark.openComment",
        "title": "Select and open a specific comment üìú"
      }
    ],
    "grammars": [
      {
        "language": "typescript",
        "scopeName": "source.wisemark",
        "path": "./syntaxes/wisemark.tmLanguage.json",
        "injectTo": [
          "source.ts",
          "source.tsx",
          "source.js",
          "source.jsx"
        ]
      }
    ],
  "configurationDefaults": {
      "[default]": {
        "editor.tokenColorCustomizations": {
          "textMateRules": [
            {
              "scope": "keyword.note.wisemark",
              "settings": {
                "foreground": "#ff6347", 
                "fontStyle": "italic"
              }
            },
            {
              "scope": "keyword.todo.wisemark",
              "settings": {
                "foreground": "#e5c07b",
                "fontStyle": "bold"
              }
            },
            {
              "scope": "keyword.fixme.wisemark",
              "settings": {
                "foreground": "#f0f0f0",
                "fontStyle": "italic"
              }
            },
            {
              "scope": "keyword.refactor.wisemark",
              "settings": {
                "foreground": "#00bcd4",
                "fontStyle": "bold"
              }
            },
            {
              "scope": "keyword.question.wisemark",
              "settings": {
                "foreground": "#8be9fd",
                "fontStyle": "italic"
              }
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@wisemark/core": "workspace:*"
  }
}
