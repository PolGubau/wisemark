{
  "name": "@wisemark/cli",
  "displayName": "Wisemark CLI",
  "version": "1.0.1",
  "bin": {
    "wisemark": "./dist/bin.js",
    "wmk": "./dist/bin.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "node dist/index.js",
    "start": "pnpm build && pnpm dev",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@wisemark/core": "workspace:*",
    "cac": "^6.7.14",
    "picocolors": "^1.1.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "ts-node": "^10.9.2",
    "tsup": "8.4.0",
    "typescript": "^5.8.2",
    "vitest": "^3.1.1"
  }
}